<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snowboardtrickguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/snowboarder_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/snowboarder_launcher_image"
        android:supportsRtl="true"
        android:theme="@style/newTheme">
        <activity
            android:name="my.apps.snowboardtrickguide.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="my.apps.snowboardtrickguide.addtrick.TrickDiscoverActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TrickDiscoverTheme" />
        <activity
            android:name="my.apps.snowboardtrickguide.EditorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/newTheme" />

        <activity android:name="my.apps.snowboardtrickguide.info.UnderstandingActivity"
            android:theme="@style/infoTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.apps.snowboardtrickguide.MainActivity" />
        </activity>
        <activity android:name="my.apps.snowboardtrickguide.info.LinksActivity"
            android:theme="@style/infoTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.apps.snowboardtrickguide.MainActivity" />
        </activity>
        <activity android:name="my.apps.snowboardtrickguide.info.TerminologyActivity"
            android:theme="@style/infoTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.apps.snowboardtrickguide.MainActivity" />
        </activity>
    </application>

</manifest>