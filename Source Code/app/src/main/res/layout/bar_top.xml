<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar_RL"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_marginHorizontal="@dimen/margin_from_screen_edge"/>

    <TextView
        android:id="@+id/top_bar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_from_screen_edge"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        tools:text="Answers: Boop, Bop, Doop"
        style="@style/subtitle1"
        tools:ignore="RelativeOverlap"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/top_bar_exit_imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/margin_from_screen_edge"
        android:layout_marginRight="25dp"
        android:onClick="quitTrickDiscoverActivity"
        android:src="@drawable/ic_clear24px"
        android:contentDescription="@string/exit_activity_cd"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

</RelativeLayout>